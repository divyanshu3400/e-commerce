<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/green_star"
                android:layout_marginStart="@dimen/margin_10"
                android:contentDescription="@string/rating_amp_reviews"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="@dimen/subheading_text_size_2"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginStart="@dimen/margin_10"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_height="wrap_content"
                android:text="Decent Product"
                android:textSize="@dimen/subheading_text_size_2"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review for: "
                android:textSize="@dimen/subheading_text_size_2"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginStart="@dimen/margin_10"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_height="wrap_content"
                android:text="Color Black.Size S"
                android:textSize="@dimen/subheading_text_size_2"
                android:textColor="@android:color/primary_text_light"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:text="Good product .. smooth and most beautiful"
            android:textSize="@dimen/subheading_text_size_2"
            android:textColor="@android:color/primary_text_light"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
